<div class = 'form-page-body'>
    <h2>Enter post</h2>
    <%= form_with url: user_posts_path, scope: :data do |form| %>

        <div class='form-container'>
            <div class='title-container'>
                <%= form.label :title, 'Title', class: 'label' %>
                <%= form.text :title, placeholder: 'Title', required: true %>
            </div>
            <div class='text-container'>
                <%= form.text_area :text, placeholder: 'Enter your post content here..', rows: 10, required: true %>
            </div>

            <%= form.submit 'Enter Post', class: 'submit-btn' %>
        </div>
    <% end %>
</div>