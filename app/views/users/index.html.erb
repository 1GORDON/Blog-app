<% @users.each do |user| %>
    <div class='u-card'>
        <div class='u-img'>
            <%= image_tag 'image-placeholder.png', width:'150px', height:'150px' %>
        </div>
        <div class ='u-name-counter-col'>
            <%= link_to user_path(user.id) do %>
                <h1 class='user-name'><%= user.name %></h1>
            <% end %>
            <p class='u-posts-counter'>Number of posts: <%=  user.posts_counter  %></p>     
        </div>    
    </div>   

<%end%>